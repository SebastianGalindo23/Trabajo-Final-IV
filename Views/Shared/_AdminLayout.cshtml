<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Administracion</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            display: flex;
            flex-direction: column;
            margin: 0;
            padding: 0;

        }

        .navbar {
            background-color: #007bff;
            color: #fff;
            padding: 1rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff;
            text-transform: uppercase;
        }

        .navbar-nav .nav-link {
            color: #fff;
            margin-left: 15px;
        }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .btn-primary {
            background-color: #ff7f50;
            border: none;
        }

            .btn-primary:hover {
                background-color: #ff6347;
            }

        .admin-card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .admin-card:hover {
                transform: scale(1.05);
            }

        .admin-card-body {
            text-align: center;
        }

        .admin-card h5 {
            color: #007bff;
            font-size: 1.25rem;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-controller="Ventas" asp-action="Index">Sistema POS2</a>
            <div class="d-flex ms-auto">
                <div class="dropdown">
                    <button class="btn btn-danger dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="ms-2">@User.Identity.Name</span> 
                        }
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Cuenta")">Logout</a></li>
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Administrar</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @RenderSection("Scripts", required: false)
</body>
</html>
