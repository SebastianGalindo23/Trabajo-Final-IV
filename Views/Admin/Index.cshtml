@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Panel de Administración</h1>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <a class="text-decoration-none" asp-controller="Productos" asp-action="Index">
                <div class="card admin-card">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Gestión de Productos</h5>
                        <p class="card-text">Administrar inventario y detalles de productos.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a class="text-decoration-none" asp-controller="Empleados" asp-action="Index">
                <div class="card admin-card">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Gestión de Empleados</h5>
                        <p class="card-text">Administrar perfiles de empleados y roles.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a class="text-decoration-none" asp-controller="Clientes" asp-action="Index">
                <div class="card admin-card">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Gestión de Clientes</h5>
                        <p class="card-text">Administrar datos de clientes y contacto.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
