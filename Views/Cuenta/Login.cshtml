@model POS.Models.EmpleadoLoginModel

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #ffffff;">
    <div class="card shadow" style="width: 350px; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Login</h2>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Usuario" class="form-label">
                        <i class="bi bi-person"></i> Username
                    </label>
                    <input asp-for="Usuario" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Contrasena" class="form-label">
                        <i class="bi bi-lock"></i> Password
                    </label>
                    <input asp-for="Contrasena" class="form-control" type="password" placeholder="Password" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3" style="border-radius: 50px;">Submit</button>
            </form>
            <div class="text-center">
                <p>No tienes cuenta?</p>
                <a asp-action="Register" class="btn btn-dark btn-sm" style="border-radius: 50px;">Registrar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
