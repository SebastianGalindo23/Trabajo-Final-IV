@model POS.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <h2 class="text-primary">Editar Producto</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Código</label>
            <input asp-for="Codigo" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="form-group">
            <label>Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Precio</label>
            <input asp-for="Precio" class="form-control" />
        </div>
        <div class="form-group">
            <label>Cantidad en Inventario (Stock)</label>
            <input asp-for="Stock" class="form-control" />
        </div>
        <div class="form-group">
            <label>Fotografía (actual)</label>
            <img src="@Model.UrlImagen" alt="Imagen del Producto" class="img-thumbnail" width="100" />
            <br />
            <label>Subir nueva imagen (si desea cambiarla):</label>
            <input type="file" name="imagen" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</div>
