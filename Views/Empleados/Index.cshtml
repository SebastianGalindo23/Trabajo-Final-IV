@model IEnumerable<POS.Models.ApplicationUser>

@{
    ViewData["Title"] = "Empleados";
}

<h1>Empleados</h1>

<p>  
    <a class="btn btn-success" asp-action="Create"> <i class="bi bi-plus"></i> Crear Nuevo Empleado</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Nombre</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Rol</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>