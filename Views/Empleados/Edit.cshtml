@model EmpleadoRegisterModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>@ViewData["Title"]</h2>

<!-- Mostrar mensajes de error -->
@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))

{
    <div class="text-danger">
        @error.ErrorMessage
    </div>
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Usuario">Usuario</label>
        <input asp-for="Usuario" class="form-control" />
        <span asp-validation-for="Usuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Correo electrónico</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Contrasena">Contraseña</label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ConfirmarContrasena">Confirmar Contraseña</label>
        <input asp-for="ConfirmarContrasena" class="form-control" type="password" />
        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Rol">Rol</label>
        <select asp-for="Rol" class="form-control">
            <option value="Admin">Admin</option>
            <option value="User">User</option>
            <!-- Añadir otros roles según sea necesario -->
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DPI">DPI</label>
        <input asp-for="DPI" class="form-control" />
        <span asp-validation-for="DPI" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="@Url.Action("Index", "Empleados")" class="btn btn-secondary">Volver al índice</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}